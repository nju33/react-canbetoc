{
  "include": ["*.config.js", ".*rc.js", ".storybook/*.js", "src"],
  "exclude": ["src/__mocks__/**/*", "src/__tests__/**/*", "src/**/*.test.ts*"],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  }
}
